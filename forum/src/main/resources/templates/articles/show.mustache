{{> layouts/header}}

{{#article}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
        </tr>

    </tbody>
</table>
<h1>Contents</h1>
<h2>{{content}}</h2>
<br>
{{/article}}

<a href="/articles" class="btn btn-success">Go To Article</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">delete</a>

